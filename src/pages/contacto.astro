---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import ContactForm from "../components/ContactForm.astro";
import { MessageCircleQuestionMark } from "@lucide/astro";
---

<Layout title="Diseño y Desarrollo Web | SEO Local y Tiendas Online">
	<Hero
		title="Contacto"
		subtitle="Estamos aquí para ayudarte. Contáctanos y cuéntanos sobre tu proyecto."
		ctaLink="https://wa.me/34605373537"
		ctaText="Contacta por WhatsApp"
	/>

	<section class="py-16">
		<div class="container mx-auto px-4">
			<div class="grid grid-cols-1 md:grid-cols-2 gap-12">
				<div>
