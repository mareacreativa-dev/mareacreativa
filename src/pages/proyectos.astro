---
import Layout from "../layouts/Layout.astro";
import HeroService from "../components/HeroService.astro";
import ProjectCard from "../components/ProjectCard.astro";
import CtaSection from "../components/CtaSection.astro";
import Project from "../projects/data.json";
---

<Layout
  title="Proyectos Realizados y Casos de Éxito | Marea Creativa"
  description="Explora nuestros últimos proyectos de diseño web estratégico, rebranding y páginas de ventas que han impulsado el crecimiento de nuestros clientes."
  keywords="proyectos diseño web, portafolio de diseño web, casos de exito web, ejemplos ecommerce, ejemplos rebranding, landing pages ejemplos"
  image="https://res.cloudinary.com/dgkdq8kzk/image/upload/v1771945624/b_ntowvf.webp"
>
  <HeroService
    title="Nuestros Proyectos"
    subtitle="Explora una selección directa de nuestros últimos retos superados. Diseño web espectacular conectado a ingeniería que genera negocio recurrente."
    image="https://res.cloudinary.com/dgkdq8kzk/image/upload/v1771945624/b_ntowvf.webp"
    badge="Casos de Éxito"
  />

  <section class="py-24 bg-[#fcfcfd]">
    <div class="container mx-auto px-4 md:px-8 max-w-7xl">
      <div class="text-left mb-16 max-w-3xl">
        <h2
          class="text-4xl md:text-5xl font-bold mb-6 tracking-tight text-gray-900"
        >
          Experiencia. <span class="text-gray-500">Diseño. Resultados.</span>
        </h2>
        <p class="text-xl text-gray-500 font-medium">
          Descubre cómo hemos ayudado a nuestros clientes a escalar sus negocios
          digitales, modernizar su identidad y agilizar sus procesos.
        </p>
      </div>

      <div
        class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8"
      >
        {
          Project?.map((project: any) => (
            <ProjectCard
              title={project.title}
              description={project.description}
              image={project.image}
              tags={project.tags}
              url={project.url}
              pais={project.pais}
            />
          ))
        }
      </div>
    </div>
  </section>

  <!-- CTA -->
  <CtaSection />
</Layout>
