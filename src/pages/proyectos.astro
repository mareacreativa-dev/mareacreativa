---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import ProjectCard from "../components/ProjectCard.astro";
import Project from "../projects/data.json";
---

<Layout
	title="Proyectos de Diseño y Desarrollo Web | SEO Local y Tiendas Online"
>
	<Hero
		title="Nuestros Proyectos"
		subtitle="Explora nuestro portfolio de trabajos y descubre cómo hemos ayudado a nuestros clientes a alcanzar sus objetivos digitales."
	/>

	<section class="py-16">
		<div class="container mx-auto px-4">
			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
				{
					Project?.map((project: any) => (
						<ProjectCard
							title={project.title}
							description={project.description}
							image={project.image}
							tags={project.tags}
							url={project.url}
							pais={project.pais}
						/>
					))
				}
			</div>
		</div>
	</section>

	<!-- CTA -->
	<section class="py-16 bg-secondary text-white relative overflow-hidden">
		<div class="absolute inset-0 z-0">
			<img
				src="https://res.cloudinary.com/dgkdq8kzk/image/upload/v1756216204/marea_background_ico_dh5xdc.svg"
				alt="Background pattern"
				class="w-full h-full object-cover opacity-20"
				title="Background pattern"
				draggable="false"
			/>
		</div>
		<div class="container mx-auto px-4 text-center relative z-10">
			<span class="text-3xl font-bold mb-4">¿Tienes un proyecto en mente?</span>
			<p class="text-xl mb-8 max-w-2xl mx-auto">
				Contáctanos hoy mismo y hablemos sobre cómo podemos ayudarte a hacerlo
				realidad.
			</p>
			<a
				href="/contacto"
				class="inline-block bg-gradient-to-r from-primary to-primary-700 text-white font-medium px-6 py-3 rounded-lg
				 hover:bg-blue-700 border border-blue-600 relative"
				style="transition: box-shadow 700ms;"
				onmouseover="this.style.boxShadow='0 0 20px var(--color-primary)';"
				onmouseout="this.style.boxShadow='none';"
			>
				Habla con nosotros
			</a>
		</div>
	</section>
</Layout>
