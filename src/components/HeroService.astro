---
export interface Props {
  title: string;
  subtitle: string;
  image: string;
  badge?: string;
}

const { title, subtitle, image, badge } = Astro.props;
---

<section class="w-full bg-white pb-16 px-4 md:px-6 lg:px-8">
  <div
    class="relative w-full max-w-7xl mx-auto rounded-b-[32px] md:rounded-b-[48px] overflow-hidden bg-[#f8f9fb] shadow-sm border-x border-b border-gray-100 flex flex-col md:flex-row"
  >
    <!-- Contenido del Hero (Mitad Izquierda/Arriba) -->
    <div
      class="relative z-10 w-full md:w-1/2 flex flex-col justify-center pt-16 md:pt-20 pb-12 px-8 md:px-14 lg:px-20 order-2 md:order-1"
    >
      {
        badge && (
          <div class="inline-flex items-center space-x-2 bg-blue-50 text-blue-700 rounded-full px-4 py-1.5 mb-6 font-semibold text-xs tracking-wider uppercase border border-blue-100 w-fit">
            <span>{badge}</span>
          </div>
        )
      }

      <h1
        class="text-4xl md:text-5xl font-bold leading-[1.1] tracking-tight mb-5 text-gray-900"
      >
        {title}
      </h1>

      <p
        class="text-base md:text-lg text-gray-500 font-normal leading-relaxed mb-8"
      >
        {subtitle}
      </p>

      <div class="flex flex-col sm:flex-row gap-4">
        <a
          href="/contacto"
          class="inline-flex justify-center items-center bg-[#1c55ff] text-white font-semibold text-base px-6 py-3.5 rounded-[16px] hover:bg-blue-700 transition-colors shadow-lg shadow-blue-500/20"
        >
          Solicitar Presupuesto
        </a>
      </div>
    </div>

    <!-- Imagen del Hero 16:9 (Mitad Derecha/Abajo) -->
    <div class="relative w-full md:w-1/2 h-64 md:h-auto order-1 md:order-2">
      <div class="absolute inset-0 bg-blue-50">
        <!-- Blend gradient desktop (left to right) -->
        <div
          class="hidden md:block absolute inset-y-0 left-0 w-32 lg:w-48 bg-gradient-to-r from-[#f8f9fb] via-[#f8f9fb]/80 to-transparent z-20"
        >
        </div>
        <!-- Blend gradient mobile (bottom to top) -->
        <div
          class="block md:hidden absolute inset-x-0 bottom-0 h-24 bg-gradient-to-t from-[#f8f9fb] to-transparent z-20"
        >
        </div>

        <!-- Overlay sutil oscuro abajo -->
        <div
          class="absolute inset-x-0 bottom-0 h-1/3 bg-gradient-to-t from-black/20 to-transparent z-10"
        >
        </div>
        <img
          src={image}
          alt={title}
          class="w-full h-full object-cover object-bottom"
        />
      </div>
    </div>
  </div>
</section>
